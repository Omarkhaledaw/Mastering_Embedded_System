#include <stdio.h>

void reverse();

int main(){

	printf("Enter a sentence: ");
	reverse();

	return 0;
}
void reverse(){
	char c;
	fflush(stdin);fflush(stdout);
	scanf("%c",&c);
	while(c != '\n'){
		reverse();
		printf("%c",c);
	}
}
